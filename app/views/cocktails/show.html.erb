
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1568582284779-3c8dcbe714af?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=600&ixid=eyJhcHBfaWQiOjF9&ixlib=rb-1.2.1&q=80&w=800);">
    <div class="container">
      <h1><%= link_to "loco roco coco cocktails", cocktails_path, class: "text-success text-decoration-none" %></h1>
    </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/500x1000/?cocktail);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<ul>
  <h2>ingredients</h2>
  <%= link_to "add an ingredient", new_cocktail_dose_path(@cocktail) %>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.ingredient.name %> - <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
      <% end %>
      </p>
    </li>
  <% end %>
</ul>
